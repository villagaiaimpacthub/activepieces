# Test Environment Configuration
NODE_ENV=test

# Test Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_NAME=activepieces_sop_test
DATABASE_USER=test_user
DATABASE_PASSWORD=test_password
DATABASE_URL=postgresql://test_user:test_password@localhost:5433/activepieces_sop_test

# Test Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380

# Application Configuration for Testing
PORT=3001
JWT_SECRET=test-jwt-secret-key
API_URL=http://localhost:3001

# Logging Configuration for Tests
LOG_LEVEL=error
LOG_FORMAT=simple
LOG_DIR=./test-logs

# E2E Test Configuration
E2E_BASE_URL=http://localhost:4200
E2E_API_URL=http://localhost:3001
E2E_TIMEOUT=30000
E2E_SLOW_MO=0
E2E_HEADLESS=true
E2E_VIDEO=false
E2E_SCREENSHOT=only-on-failure

# Test Flags
SKIP_AUTH_CHECKS=true
SKIP_RATE_LIMITING=true
DEBUG_E2E=false
TEST_CLEANUP_PROCESSES=true
KEEP_TEST_FILES=false

# File Upload Configuration for Tests
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./test-uploads
TEMP_DIR=./test-temp

# Mock Services
USE_MOCK_EMAIL=true
USE_MOCK_STORAGE=true
USE_MOCK_EXTERNAL_APIs=true