{
  "name": "sop-framework",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pieces/community/sop-framework/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/pieces/community/sop-framework",
        "main": "packages/pieces/community/sop-framework/src/index.ts",
        "tsConfig": "packages/pieces/community/sop-framework/tsconfig.json",
        "assets": [
          "packages/pieces/community/sop-framework/*.md",
          "packages/pieces/community/sop-framework/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/pieces/community/sop-framework/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/pieces/community/sop-framework/**/*.ts",
          "packages/pieces/community/sop-framework/package.json"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "dist/packages/pieces/community/sop-framework"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": ["scope:pieces", "type:framework", "category:sop"]
}