{
  "name": "@sparc/sop-data-form",
  "version": "1.0.0",
  "description": "Comprehensive data form management piece for Standard Operating Procedures with dynamic form creation, validation, compliance checking, and audit capabilities",
  "main": "index.js",
  "types": "index.d.ts",
  "keywords": [
    "activepieces",
    "sop",
    "data-form",
    "validation",
    "compliance",
    "gdpr",
    "hipaa",
    "audit-trail",
    "form-builder",
    "workflow",
    "business-process",
    "standard-operating-procedure"
  ],
  "author": "SPARC AI System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sparc-ai/activepieces-sop-framework",
    "directory": "packages/pieces/community/sop-framework/src/pieces/data-form"
  },
  "bugs": {
    "url": "https://github.com/sparc-ai/activepieces-sop-framework/issues"
  },
  "homepage": "https://github.com/sparc-ai/activepieces-sop-framework#readme",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Linting handled by NX workspace'",
    "lint:fix": "echo 'Linting handled by NX workspace'",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "docs": "typedoc --out docs lib/",
    "clean": "rimraf dist coverage docs .tsbuildinfo"
  },
  "dependencies": {
    "@activepieces/pieces-framework": "^0.52.0",
    "@activepieces/shared": "^0.52.0",
    "@sinclair/typebox": "^0.31.28",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@sparc/sop-framework-core": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "lib/**/*",
    "index.js",
    "index.d.ts",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/test/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts",
      "!lib/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  },
  "typedoc": {
    "entryPoints": [
      "lib/common/data-form-types.ts",
      "lib/validation/data-form-validator.ts",
      "lib/utils/data-form-helpers.ts",
      "lib/actions/data-form-action.ts",
      "lib/triggers/data-form-trigger.ts"
    ],
    "out": "docs",
    "plugin": [
      "typedoc-plugin-markdown"
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/sparc-ai"
  }
}