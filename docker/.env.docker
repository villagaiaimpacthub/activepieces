# Docker Environment Configuration
# Copy this to .env in the docker directory for local development

# Database Configuration
POSTGRES_DB=activepieces_sop
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@postgres:5432/activepieces_sop

# Redis Configuration
REDIS_URL=redis://redis:6379

# Backend Configuration
NODE_ENV=development
JWT_SECRET=development-jwt-secret-key-change-in-production
API_PORT=3000

# Frontend Configuration
FRONTEND_PORT=4200
API_URL=http://localhost:3000

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@activepieces.com
PGADMIN_DEFAULT_PASSWORD=admin

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/tmp/uploads